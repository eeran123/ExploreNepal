<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        tools:ignore="MissingConstraints">


    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
       >

        <ImageView
            android:id="@+id/ivPlace"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/carpediem" />

        <TextView
            android:id="@+id/tvPlaceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivPlace"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:padding="5dp"
            android:text="blabla bla"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvPlaceName"
            android:layout_alignStart="@+id/tvPlaceName"
            android:layout_marginStart="6dp"
            android:layout_marginTop="-24dp"
            android:text="blablablablablablablabla" />

        <Button
            android:id="@+id/favBtn"
            android:layout_width="44dp"
            android:layout_height="32dp"
            android:layout_below="@+id/guide"
            android:layout_alignRight="@+id/guide"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-241dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="-212dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/button"
            android:drawableLeft="@drawable/ic_favorite_border_white"
            android:gravity="center"
            android:textColor="@color/white" />

    </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>